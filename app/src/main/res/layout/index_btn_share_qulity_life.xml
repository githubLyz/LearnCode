<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_index_share_quality_life_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/index_share_quality_life_anim_dialog_bg" />

    <ImageView
        android:id="@+id/iv_index_share_quality_life_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="35dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="@+id/iv_index_share_quality_life_bubble"
        app:layout_constraintStart_toStartOf="@+id/iv_index_share_quality_life_bubble"
        app:layout_constraintTop_toTopOf="@+id/iv_index_share_quality_life_bubble"
        app:srcCompat="@mipmap/index_share_quality_life_anim_pic" />

    <ImageView
        android:id="@+id/iv_index_share_quality_life_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="35dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="@+id/iv_index_share_quality_life_bubble"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_index_share_quality_life_bubble"
        app:srcCompat="@mipmap/index_share_quality_life_anim_camera" />

    <TextView
        android:id="@+id/tv_index_share_quality_life_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:layout_marginTop="14dp"
        android:text="分享您的品质生活"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_index_share_quality_life_bubble" />

    <ImageView
        android:id="@+id/iv_index_share_quality_life_bottom_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/index_share_quality_life_anim_btn_second_bg" />

    <ImageView
        android:id="@+id/iv_index_share_quality_life_around"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/index_share_quality_life_anim_around" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/index_share_quality_life_anim_btn_main_bg" />

    <ImageView
        android:id="@+id/iv_index_share_quality_life_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_index_share_quality_life_bottom_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/index_share_quality_life_anim_add" />


</android.support.constraint.ConstraintLayout>